@page
@model OpenSaludSecurity.Pages.Medicos.CreateModel

@{
	ViewData["Title"] = "Medicos";
}

<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Crear nuevo</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

	<h4>Medico</h4>
	<hr />
	<div class="row">
		<div class="col-md-4">
            <form method="post">
                <div>
                  <label for="formFileLg" class="form-label">Foto de Perfil</label>
                  <input class="form-control form-control-lg" id="formFileLg" type="file">
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Medico.Nombre" class="control-label"></label>
                    <input asp-for="Medico.Nombre" class="form-control" />
                    <span asp-validation-for="Medico.Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Medico.Apellido1" class="control-label"></label>
                    <input asp-for="Medico.Apellido1" class="form-control" />
                    <span asp-validation-for="Medico.Apellido1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Medico.Apellido2" class="control-label"></label>
                    <input asp-for="Medico.Apellido2" class="form-control" />
                    <span asp-validation-for="Medico.Apellido2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Medico.Especialidad" class="control-label"></label>
                    <select asp-for="Medico.Especialidad" asp-items="Html.GetEnumSelectList<EspecialidadMedica>()" class="form-control">
                        <option selected="selected" value="">Seleccionar...</option>
                    </select>
                    <span asp-validation-for="Medico.Especialidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Medico.ClinicaRefId" class="control-label"></label>
                    <select asp-for="Medico.ClinicaRefId" asp-items="@Model.IdClinicasDisponibles" class="form-control">
                        <option selected="selected" value="">Seleccionar...</option>
                    </select>
                    <span asp-validation-for="Medico.ClinicaRefId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Agregar" class="btn btn-primary" />
                </div>
            </form>
		</div>
	</div>

	<div>
		<a asp-page="Index">Volver</a>
	</div>

	@section Scripts {
		@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	}
</body>
</html>
