@page
@model OpenSaludSecurity.Pages.Medicos.DetailsModel
@{
	ViewData["Title"] = "Medicos";
}

<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Detalles</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

	<div>
		<h4>Medico</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Medico.Nombre)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Medico.Nombre)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Medico.Apellido1)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Medico.Apellido1)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Medico.Apellido2)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Medico.Apellido2)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Medico.Especialidad)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Medico.Especialidad)
			</dd>
		</dl>
	</div>
	<div>
		@if ((await AuthorizationService.AuthorizeAsync(
		 User, Model.Medico,
		 MedicoOperations.Update)).Succeeded)
		{
			<a asp-page="./Edit" asp-route-id="@Model.Medico.IdMedico">Modificar</a>
		}
		<a asp-page="./Index">Volver</a>
	</div>
</body>
</html>
