@page
@model OpenSaludSecurity.Pages.Calificaciones.CreateModel

@{
    ViewData["Title"] = "Calificaciones";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Calificaciones</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Calificacion.Comentario" class="control-label"></label>
                    <input asp-for="Calificacion.Comentario" class="form-control" />
                    <span asp-validation-for="Calificacion.Comentario" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="Calificacion.IdUsuario" class="control-label" hidden></label>
                    <input asp-for="Calificacion.IdUsuario" type="hidden" value="@Model.UserId" class="form-control" readonly />
                    <span asp-validation-for="Calificacion.IdUsuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Calificacion.ClinicaRefId" class="control-label"></label>
                    <select asp-for="Calificacion.ClinicaRefId" asp-items="@Model.IdClinicasDisponibles" class="form-control">
                        <option selected="selected" value="">Seleccionar...</option>
                    </select>
                    <span asp-validation-for="Calificacion.ClinicaRefId" class="text-danger"></span>
                </div>
                <div class="rating form-group">
                    @Html.RadioButtonFor(m => m.Calificacion.Estrellas, "5", new { id = "star5", @class = "radio-btn hide" })
                    <label for="star5">☆</label>
                    @Html.RadioButtonFor(m => m.Calificacion.Estrellas, "4", new { id = "star4", @class = "radio-btn hide" })
                    <label for="star4">☆</label>
                    @Html.RadioButtonFor(m => m.Calificacion.Estrellas, "3", new { id = "star3", @class = "radio-btn hide" })
                    <label for="star3">☆</label>
                    @Html.RadioButtonFor(m => m.Calificacion.Estrellas, "2", new { id = "star2", @class = "radio-btn hide" })
                    <label for="star2">☆</label>
                    @Html.RadioButtonFor(m => m.Calificacion.Estrellas, "1", new { id = "star1", @class = "radio-btn hide" })
                    <label for="star1">☆</label>
                    <div class="clear"></div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Enviar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Volver</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>