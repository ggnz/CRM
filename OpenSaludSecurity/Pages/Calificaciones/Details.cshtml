@page
@model OpenSaludSecurity.Pages.Calificaciones.DetailsModel

@{
    ViewData["Title"] = "Calificaciones";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Calificaciones</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div>
        <h4>Calificacion</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Calificacion.Comentario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Calificacion.Comentario)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Calificacion.Estrellas)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Calificacion.Estrellas)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Calificacion.IdCalificacion">Edit</a> |
        <a asp-page="./Index">Volver</a>
    </div>
</body>
</html>