@page
@model OpenSaludSecurity.Pages.Citas.DeleteModel

@{
    ViewData["Title"] = "Cita";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Eliminar</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <h3>Está seguro que desea eliminar esta cita?</h3>
    <div>
        <h4>Cita</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cita.DescripcionCita)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cita.DescripcionCita)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cita.FechaCita)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cita.FechaCita)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cita.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cita.Estado)
            </dd>
        </dl>
    
        <form method="post">
            <input type="hidden" asp-for="Cita.IdCita" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-page="./Index">Volver</a>
        </form>
    </div>
</body>
</html>