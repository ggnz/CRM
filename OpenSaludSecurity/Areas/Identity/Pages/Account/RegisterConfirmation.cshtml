@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmacion de registro";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
     <a id="confirm-link" href="@Model.EmailConfirmationUrl">Click aqui para confirmar su cuenta</a>
</p>
    }
    else
    {
<p>
    Por favor revise su correo electr&oacute;nico para confirmar su cuenta.
</p>
    }
}
